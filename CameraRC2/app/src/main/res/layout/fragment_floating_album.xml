<com.siskin.camerarc2.floatingConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80808080"
    tools:context="com.siskin.camerarc2.Fragment.FloatingAlbumFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/floatingAlbum_photo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/id_recyclerview_horizontal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_recyclerview_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"

        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
         />

</com.siskin.camerarc2.floatingConstraintLayout>
